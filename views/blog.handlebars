<div class="row mt-4">
  <div class="col-md-6">
    <h2>{{name}}</h2>
    <p>{{description}}</p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <!-- conditionally render the comment button if logged in -->
    {{#if logged_in}}
      {{> comment}}
    {{/if}}
  </div>

    <div class="col-md-6 blog-list">
    <h3>Current Comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/comment/{{comment.id}}">{{comment.context}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>

</div>

